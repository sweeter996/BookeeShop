@model BookeeShop.Areas.Admin.Models.cast_RegisterCustomerModel
    @{
        Layout = null;
    }
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Sign-Up/Login Form</title>
        <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

        <link rel="stylesheet" href="~/Content/css/stylelogin.css">

    </head>
    <body>
        <div class="form">

            <ul class="tab-group">
                <li class="tab active"><a href="#signup">Đăng Ký</a></li>
                <li class="tab"><a href="#login">Đăng Nhập</a></li>
            </ul>

            <div class="tab-content">
                <div id="signup">
                    <h1>ĐĂNG KÝ!</h1>

                    <form method="post" action="@Url.Action("Register","Bookee")">

                        <div class="top-row">
                            <div class="field-wrap">
                                <label style="color:black">
                                    First Name<span class="req">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.FirstName, new { placeholder = "*", autocomplete = "off", required = "required" })
                            </div>

                            <div class="field-wrap">
                                <label style="color:black">
                                    Last Name<span class="req">*</span>
                                </label>
                                @Html.TextBoxFor(model => model.LastName, new { placeholder = "*", autocomplete = "off", required = "required" })
                            </div>
                        </div>
                        <div class="field-wrap">
                            <label style="color:black">
                                Email<span class="req">*</span>
                            </label>
                            @Html.TextBoxFor(model => model.Email, new { placeholder = "*", autocomplete = "off", required = "required", @type = "email" })
                        </div>
                        <div class="field-wrap">
                            <label style="color:black">
                                Password<span class="req">*</span>
                            </label>
                            @Html.PasswordFor(model => model.Password, new { placeholder = "*", autocomplete = "off", required = "required" })
                        </div>
                        <button type="submit" class="button button-block">Tạo tài khoản</button>
                    </form>
                </div>

                <div id="login">
                    <h1>ĐĂNG NHẬP!</h1>

                    <form action="@Url.Action("Login","Bookee")" method="post">
                        <div class="field-wrap">
                            <label style="color:black">
                                Email<span class="req">*</span>
                            </label>
                            @Html.TextBoxFor(model => model.LastName, new { placeholder = "*", autocomplete = "off", required = "required" })
                        </div>

                        <div class="field-wrap">
                            <label style="color:black">
                                Password<span class="req">*</span>
                            </label>
                            @Html.PasswordFor(model => model.Password, new { placeholder = "*", autocomplete = "off", required = "required" })
                        </div>

                        <button class="button button-block">Đăng Nhập</button>

                    </form>
                </div>

            </div><!-- tab-content -->

        </div> <!-- /form -->
        <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

        <script src="~/Content/js/index.js"></script>


    </body>
    </html>
































































































